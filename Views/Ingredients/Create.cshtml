@model Recitopia.Models.Ingredient

@{
    ViewBag.Title = "Create";
}

    
        <table style="width:100%" class="table table-borderless rounded-sm box effect8">
            <tr>
                <th style="font-size:20px;background-color:blanchedalmond">
                    New Ingredient
                </th>
            </tr>

        </table>
        <br />
            <div style="width:350px;font-size:13px">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Ingred_name" class="control-label" style="font-weight:bold"></label>
                        <input asp-for="Ingred_name" class="form-control"  style="font-size:13px"/>
                        <span asp-validation-for="Ingred_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ingred_Comp_name" class="control-label" style="font-weight:bold"></label>
                        <textarea asp-for="Ingred_Comp_name" class="form-control" style="font-size:13px"></textarea>
                        <span asp-validation-for="Ingred_Comp_name" class="text-danger"></span>
                    </div>
                   

                    <div class="form-group">
                        <label asp-for="Cost_per_lb" class="control-label" style="font-weight:bold"></label>
                        <input asp-for="Cost_per_lb" class="form-control"  style="font-size:13px"/>
                        <span asp-validation-for="Cost_per_lb" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cost" class="control-label" style="font-weight:bold"></label>
                        <input asp-for="Cost" class="form-control"  style="font-size:13px"/>
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Vendor_Id" class="control-label" style="font-weight:bold"></label>
                        <br />
                        <select asp-for="Vendor_Id" style="font-size:13px"
                                asp-items="ViewBag.Vendor_Id">
                        </select>
                        <span asp-validation-for="Vendor_Id" class="text-danger"></span>
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="Notes" class="control-label" style="font-weight:bold"></label>
                        <textarea asp-for="Notes" class="form-control" style="font-size:13px"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Brand" class="control-label" style="font-weight:bold"></label>
                        <input asp-for="Brand" class="form-control"  style="font-size:13px"/>
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Website" class="control-label" style="font-weight:bold"></label>
                        <input asp-for="Website" class="form-control"  style="font-size:13px"/>
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn alert-success effect8" />
                    </div>
                </form>
            </div>
       

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
