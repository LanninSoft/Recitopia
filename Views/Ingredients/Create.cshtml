@model Recitopia.Models.Ingredient

@{
    ViewBag.Title = "Create";
}

    <div class="container">
        <table width="100%" class="table-borderless">
            <tr>
                <th style="font-size:30px;background-color:blanchedalmond">
                    New Ingredient
                </th>
            </tr>

        </table>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div style="width:100%" class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <font style="font-size:13px;font-weight:bolder">Ingredient Name</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ingred_name, new { htmlAttributes = new { @class = "form-control", @required="required", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.Ingred_name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <font style="font-size:13px;font-weight:bolder">Ingredient Component Name</font>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Ingred_Comp_name,  new { @class = "form-control", @cols = "100", @rows = "4", @style="width:100%;font-size:13px"})
                @Html.ValidationMessageFor(model => model.Ingred_Comp_name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <font style="font-size:13px;font-weight:bolder">Packaging</font>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Package)
                    @Html.ValidationMessageFor(model => model.Package, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        
        <div class="form-group">

            <font style="font-size:13px;font-weight:bolder">Cost per lb</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cost_per_lb, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.Cost_per_lb, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <font style="font-size:13px;font-weight:bolder">Cost $</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <font style="font-size:13px;font-weight:bolder">Vendor Name</font>
            <div class="col-md-10">
                @Html.DropDownList("Vendor_Id", null, htmlAttributes: new { @class = "form-control", style = "font-size:13px;height:35px" })
                @Html.ValidationMessageFor(model => model.Vendor_Id, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">

            <font style="font-size:13px;font-weight:bolder">Notes</font>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @cols = "100", @rows = "4", @style = "width:100%;font-size:13px" })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">

            <font style="font-size:13px;font-weight:bolder">Brand</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn alert-success" />
            </div>
        </div>
    </div>
        }
    </div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
