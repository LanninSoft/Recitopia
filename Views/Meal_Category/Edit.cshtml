@model Recitopia.Models.Meal_Category

@{
    ViewBag.Title = "Edit";
}


<table style="width:100%">
    <tr>
        <th>
            Edit
        </th>
    </tr>

</table>
<table style="width:100%" class="table table-borderless rounded-sm box effect8">
    <tr class="pageBanner">
        <th style="font-size:20px">
             @Model.Category_Name
        </th>
    </tr>

</table>
<br />

<div style="width:350px;font-size:13px">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Category_Id" />
        <div class="form-group">
            <label asp-for="Category_Name" class="control-label" style="font-weight:bold"></label>
            <input asp-for="Category_Name" class="form-control"  style="font-size:13px"/>
            <span asp-validation-for="Category_Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Notes" class="control-label" style="font-weight:bold"></label>
            <textarea asp-for="Notes" class="form-control" style="font-size:13px"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn alert-success effect8" />
        </div>
    </form>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>



