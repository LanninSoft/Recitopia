@model Recitopia.Models.Packaging

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <table style="width:100%" class="table table-borderless rounded-sm box effect8">
        <tr>
            <th style="font-size:20px;background-color:blanchedalmond">
                New Packaging
            </th>
        </tr>

    </table>
<br />
    <div style="width:350px;font-size:13px">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Package_Name" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Package_Name" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Package_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendor_Name" class="control-label" style="font-weight:bold"></label>
                <select asp-for="Vendor_Id" style="font-size:13px"
                        asp-items="ViewBag.Vendor_Id" required class="form-control">
                </select>
                <span asp-validation-for="Vendor_Id" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Website" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Website" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Cost" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Cost" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Weight" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label" style="font-weight:bold"></label>
                <textarea asp-for="Notes" class="form-control" style="font-size:13px"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn alert-success effect8" />
            </div>
        </form>
    </div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

