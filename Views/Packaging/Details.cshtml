@model Recitopia.Models.Packaging

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Package_Id }) |
    @Html.ActionLink("Back to List", "Index", new { id = Model.Package_Id }) |
    @if (Model.isArchived == false)
    {
        @Html.ActionLink("Archive It", "ArchiveIt", new { id = Model.Package_Id })
    }
    else
    {
        @Html.ActionLink("UnArchive It", "UnArchiveIt", new { id = Model.Package_Id })
    }
</div>
<table style="width:100%">
    <tr>
        <th>
            Details
        </th>
    </tr>
</table>
@if (Model.isArchived == true)
{
    var isArchivedMessage = "Archived on " + Model.ArchiveDate.ToShortDateString();

    <table style="width:100%" class="table table-borderless rounded-sm box effect8">
        <tr class="pageBanner">
            <th style="font-size:20px">
                @Model.Package_Name <font style="font-size:15px;color:red">(@isArchivedMessage)</font>
            </th>
        </tr>

    </table>
}
else
{

    <table style="width:100%" class="table table-borderless rounded-sm box effect8">
        <tr class="pageBanner">
            <th style="font-size:20px">
                @Model.Package_Name
            </th>
        </tr>

    </table>
}
<br />
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Package_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Package_Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendor_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendor_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastModified)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Package_Id }) |
    @Html.ActionLink("Back to List", "Index", new { id = Model.Package_Id }) |
    @if (Model.isArchived == false)
    {
        @Html.ActionLink("Archive It", "ArchiveIt", new { id = Model.Package_Id })
    }
    else
    {
        @Html.ActionLink("UnArchive It", "UnArchiveIt", new { id = Model.Package_Id })
    }
</div>
