@model Recitopia.Models.Ingredient_Nutrients

@{
    ViewBag.Title = "Delete";
}

@if (ViewBag.ErrorMessage != null)
{
    <font style="color:red">@ViewBag.ErrorMessage</font>
}

<table style="width:100%" class="table table-borderless rounded-sm box effect8">
    <tr class="pageBannerAdmin">
        <th>
            Delete
        </th>
    </tr>
</table>
<br />
<font class="alert-danger">Are you sure you want to delete this Nutritional item from this Ingredient?</font>
<div>


    <dl class="dl-horizontal" style="font-size:13px">
        <dt>
            Ingredient Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ingredients.Ingred_name)
        </dd>

        <dt>
            Nutrition Item
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nutrition.Nutrition_Item)
        </dd>
        <dt>
            Nutrition/100g
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nut_per_100_grams)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn alert-danger effect8" /> |
            @Html.ActionLink("Back to List", "Index", new { IngredID = Model.Ingred_Id })
        </div>
    }
</div>
