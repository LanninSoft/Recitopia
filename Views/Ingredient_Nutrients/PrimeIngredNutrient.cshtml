@model Recitopia_LastChance.Models.Ingredient

@{
    ViewBag.Title = "Create Copy";
}

@if (ViewBag.ErrorMessage != null)
{
    <font style="color:red">@ViewBag.ErrorMessage</font>
}



<font class="alert-info">Are you sure you want to create default nutrition for '@Model.Ingred_name'?  This will prime the Ingredient with the items selected to be on the Nutrition Panel under Nutrition.</font>

<div>
   
  
    <dl class="dl-horizontal">
        <dt>
            Ingredient Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ingred_name)
        </dd>

        

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Prime Default Nutrient List" class="btn alert-info" /> |
            @Html.ActionLink("Back to List", "Index", new { IngredID = Model.Ingredient_Id })
        </div>
    }
</div>
