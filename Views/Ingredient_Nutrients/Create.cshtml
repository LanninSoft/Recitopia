@model Recitopia.Models.Ingredient_Nutrients

@{
    ViewBag.Title = "Create";
}


<table style="width:100%" class="table table-borderless rounded-sm box effect8">
    <tr>
        <th style="font-size:20px;background-color:blanchedalmond">
            @ViewBag.IngredName
        </th>
    </tr>

</table>
<br />
<table width="100%">
    <tr>
        <td valign="top">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">


                    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Ingred_Id,
                                                            new { id = "Ingred_Id", Value = ViewBag.IngredId })*@
                    <div class="form-group">

                        <input value="@ViewBag.IngredId" id="RID" name="RID" type="hidden">
                    </div>
                    <div class="form-group">

                        <font style="font-size:13px;font-weight:bolder">Nutrition Item</font>
                        <div class="col-md-10">
                            @Html.DropDownList("Nutrition_Item_Id", null, htmlAttributes: new { @class = "form-control", required = "required", style = "font-size:13px;height:35px" })
                            @Html.ValidationMessageFor(model => model.Nutrition_Item_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">

                        <font style="font-size:13px;font-weight:bolder">Nutrition/100g</font>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Nut_per_100_grams, new { @class = "form-control", @Value = "0", style = "font-size:13px;height:25px" })
                            @Html.ValidationMessageFor(model => model.Nut_per_100_grams, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add" class="btn alert-success effect8" />
                        </div>
                    </div>
                </div>
            }

        </td>

        <td style="vertical-align:top;text-align:left">
            <div class="effect8" style="width:300px">
                <table style="width:100%" class="table-striped">
                    <tr style="background-color:lightblue">
                        <th align="center">
                            Nutrition already in '@ViewBag.IngredName'
                        </th>

                    </tr>
                    @if (ViewBag.Nutrition != null)
                    {
                        foreach (var thing in ViewBag.Nutrition)
                        {
                            <tr>
                                <td style="font-size:small">
                                    -@thing
                                </td>


                            </tr>
                        }
                    }

                </table>
            </div>
        </td>
    </tr>
</table>
<div>
   
    @Html.ActionLink("Back to List", "Index", new { IngredID = ViewBag.IngredId })
</div>

