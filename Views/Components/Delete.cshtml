@model Recitopia.Models.Components

@{
    ViewBag.Title = "Delete";
}

@if (ViewBag.ErrorMessage != null)
{
    <font style="color:red">@ViewBag.ErrorMessage</font>
}


<table style="width:100%" class="table table-borderless rounded-sm box effect8">
    <tr class="pageBannerAdmin">
        <th>
            Delete
        </th>
    </tr>
</table>
<br />

<font class="alert-danger">Are you sure you want to delete this Allergen Component?</font>
<br />  This will also remove any associations to Ingredients?
<br />
<div>


    <dl class="dl-horizontal" style="font-size:13px">
        <dt>
            Component Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Component_Name)
        </dd>

        <dt>
            Notes
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn alert-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
