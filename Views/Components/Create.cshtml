@model Recitopia.Models.Components

@{
    ViewBag.Title = "Create";
}

<table width="100%" class="table-borderless">
    <tr>
        <th style="font-size:30px;background-color:blanchedalmond">
            New Allergen Component
        </th>
    </tr>

</table>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Component_Name" class="control-label"></label>
                <input asp-for="Component_Name" class="form-control" />
                <span asp-validation-for="Component_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <font style="font-weight:bold">Notes</font>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn alert-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>