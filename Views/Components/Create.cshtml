@model Recitopia_LastChance.Models.Components

@{
    ViewBag.Title = "Create";
}

    <table width="100%" class="table-borderless">
        <tr>
            <th style="font-size:30px;background-color:blanchedalmond">
                New Allergen Component
            </th>
        </tr>

    </table>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Component Name</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Component_Name, new { htmlAttributes = new { @class = "form-control", @required="required",style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.Component_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Notes</font>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @cols = "100", @rows = "4", @style = "width:100%;font-size:13px" })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn alert-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
