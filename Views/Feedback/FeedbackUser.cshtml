@model Recitopia.Models.Feedback

@{
    ViewData["Title"] = "Create Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table width="100%" class="table-borderless">
    <tr>
        <th style="font-size:30px;background-color:blanchedalmond">
            Provide Feedback
        </th>
    </tr>

</table>
@if (ViewBag.SuccessMessage != null)
{
    <br />
    
    <div style="background-color:lightgreen;font-size:14px;width:auto">
        <table>
            <tr>
                <td style="padding:5px">
                    <font>@ViewBag.SuccessMessage</font>
                </td>
            </tr>
        </table>
    </div>
}
@if (ViewBag.ErrorMessage != null)
{
    <br />
    <div style="background-color:lightcoral;font-size:14px;width:auto">
        <table>
            <tr>
                <td style="padding:5px">
                    <font>@ViewBag.ErrorMessage</font>
                </td>
            </tr>
        </table>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="FeedBackUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            @if (ViewBag.SuccessMessage == null) { 
                <div class="form-group">
                    <input type="submit" value="Save" class="btn alert-success" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="FeedbackUserHistory">View Your Feedback History</a>
</div>

