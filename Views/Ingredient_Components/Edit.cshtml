@model Recitopia.Models.Ingredient_Components

@{
    ViewBag.Title = "Edit";
}

   
    <table style="width:100%" class="table table-borderless rounded-sm box effect8">
        <tr>
            <th style="font-size:20px">
                Edit
            </th>
        </tr>
        <tr>
            <th style="font-size:20px;background-color:blanchedalmond">
                @ViewBag.IngredName
            </th>
        </tr>
        
    </table>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        
        @Html.HiddenFor(model => model.Ingred_Id,
                    new { id = "Ingred_Id", Value = ViewBag.IngredId })
       
        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Allergen Component Name</font>
            <div class="col-md-10">
                @Html.DropDownList("Comp_Id", null, htmlAttributes: new { @class = "form-control", style = "font-size:13px;height:35px" })
                @Html.ValidationMessageFor(model => model.Comp_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn alert-warning effect8" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { IngredID = Model.Ingredients.Ingredient_Id })
</div>
