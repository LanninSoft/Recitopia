@model Recitopia.Models.Recipe

@{
    ViewBag.Title = "Edit";
 }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Recipe_Id)
    <table width="100%">
        <tr>
            <th>
                Edit
            </th>
        </tr>
        <tr>
            <th style="font-size:30px;background-color:blanchedalmond">
                @ViewBag.Recipe_Name
            </th>
        </tr>
        <tr>
            <td style="font-weight:bold">
                Recipe Name
            </td>
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.Recipe_Name, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px"  } })
                @Html.ValidationMessageFor(model => model.Recipe_Name, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="font-weight:bold">
                Category
            </td>
        </tr>
        <tr>
            <td>
                @Html.DropDownList("Category_Id", null, htmlAttributes: new { @class = "form-control", style = "font-size:13px;height:35px" })
                @Html.ValidationMessageFor(model => model.Category_Id, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="font-weight:bold">
                Serving Size
            </td>
        </tr>
        <tr>
            <td>
                @Html.DropDownList("SS_Id", null, htmlAttributes: new { @class = "form-control", style = "font-size:13px;height:35px" })
                @Html.ValidationMessageFor(model => model.SS_Id, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="font-weight:bold">
                Labor Cost
            </td>
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.LaborCost, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.LaborCost, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="font-weight:bold">
                Gluten Free
            </td>
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.Gluten_Free)
                @Html.ValidationMessageFor(model => model.Gluten_Free, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="font-weight:bold">
                SKU
            </td>
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.SKU, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.SKU, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="font-weight:bold">
                UPC
            </td>
        </tr>
        <tr>
            <td>
                @Html.EditorFor(model => model.UPC, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.UPC, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="font-weight:bold">
                Notes
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextAreaFor(model => model.Notes,   new { @class = "form-control", @cols = "100", @rows = "4", @style="width:100%;font-size:13px"})
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Save" class="btn alert-success" />                
            </td>
        </tr>        
    </table>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
