@model Recitopia.Models.Recipe

@{
    ViewBag.Title = "Create Copy";
}

@if (ViewBag.ErrorMessage != null)
{
    <font style="color:red">@ViewBag.ErrorMessage</font>
}

<table style="width:100%" class="table table-borderless rounded-sm box effect8">
    <tr class="pageBanner">
        <th style="font-size:20px">
            Create Recipe Copy 
        </th>
    </tr>

</table>
<br />
<div>
    <font class="alert-info">Are you sure you want to create a copy of '@Model.Recipe_Name'?</font>
</div>


<div>

    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Recipe_Name)
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Recipe_Name)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Create Copy" class="btn alert-info" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
