@model Recitopia.Models.Recipe_Ingredients

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    
    <table width="100%" class="table-borderless">
        <tr>
            <th style="font-size:20px">
                Edit
            </th>
        </tr>
        <tr>
            <th style="font-size:30px;background-color:blanchedalmond">
                @ViewBag.RecipeName
            </th>
        </tr>

    </table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Recipe_Id,
                                                new { id = "Recipe_Id", Value = ViewBag.Rec_Id })
       
        <div class="form-group">
            <font style="font-size:13px;font-weight:bolder">Ingredient Name</font>
            <div class="col-md-10">
                @Html.DropDownList("Ingredient_Id", null, htmlAttributes: new { @class = "form-control", style = "font-size:13px;height:35px" })
                @Html.ValidationMessageFor(model => model.Ingredient_Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Amount g</font>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Amount_g, new { @class = "form-control", style = "font-size:13px;height:25px" })
                @Html.ValidationMessageFor(model => model.Amount_g, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn alert-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { recipeID = Model.Recipe.Recipe_Id } )
</div>
