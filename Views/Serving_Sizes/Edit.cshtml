@model Recitopia.Models.Serving_Sizes

@{
    ViewBag.Title = "Edit";
}

<table width="100%" class="table-borderless">
    <tr>
        <th style="font-size:20px">
            Edit Serving Size
        </th>
    </tr>
    <tr>
        <th style="font-size:30px;background-color:blanchedalmond">
            @Model.Serving_Size
        </th>
    </tr>

</table>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SS_Id)

        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Serving Size</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Serving_Size, new { htmlAttributes = new { @class = "form-control", style = "font-size:15px;height:30px" } })
                @Html.ValidationMessageFor(model => model.Serving_Size, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <font style="font-size:13px;font-weight:bolder">Notes</font>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @cols = "100", @rows = "4", @style = "width:100%;font-size:13px" })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn alert-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
