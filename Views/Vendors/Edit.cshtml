@model Recitopia.Models.Vendor

@{
    ViewBag.Title = "Edit";
}

<table width="100%" class="table-borderless">
    <tr>
        <th style="font-size:20px">
            Edit
        </th>
    </tr>
    <tr>
        <th style="font-size:30px;background-color:blanchedalmond">
            @Model.Vendor_Name
        </th>
    </tr>

</table>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Vendor_Id)

        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Vendor Name</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vendor_Name, new { htmlAttributes = new { @class = "form-control", style = "font-size:15px;height:30px" } })
                @Html.ValidationMessageFor(model => model.Vendor_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Phone</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Email</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Address 1</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
