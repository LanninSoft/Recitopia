            </div>
        </div>

        <div class="form-group">
            
            <font style="font-size:13px;font-weight:bolder">Address 2</font>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
                @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
