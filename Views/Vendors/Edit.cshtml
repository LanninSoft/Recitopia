@model Recitopia.Models.Vendor

@{
    ViewBag.Title = "Edit";
}


<table style="width:100%">
    <tr>
        <th>
            Edit
        </th>
    </tr>

</table>
<table style="width:100%" class="table table-borderless rounded-sm box effect8">
    <tr class="pageBanner">
        <th style="font-size:20px">
            @Model.Vendor_Name
        </th>
    </tr>

</table>
<br />

    <div style="width:350px;font-size:13px">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vendor_Id" />
            <div class="form-group">
                <label asp-for="Vendor_Name" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Vendor_Name" class="form-control" style="font-size:13px" />
