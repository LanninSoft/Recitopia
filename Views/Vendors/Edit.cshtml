            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Phone" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Email" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address1" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Address1" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address2" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Address2" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label" style="font-weight:bold"></label>
                <input asp-for="City" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label" style="font-weight:bold"></label>
                <input asp-for="State" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Zip" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Web_URL" class="control-label" style="font-weight:bold"></label>
                <input asp-for="Web_URL" class="form-control"  style="font-size:13px"/>
                <span asp-validation-for="Web_URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label" style="font-weight:bold"></label>
                <textarea asp-for="Notes" class="form-control" style="font-size:13px"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary effect8" />
            </div>
        </form>
    </div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

