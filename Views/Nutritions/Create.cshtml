@model Recitopia_LastChance.Models.Nutrition

@{
    ViewBag.Title = "Create";
}

    <table width="100%" class="table-borderless">
        <tr>
            <th style="font-size:30px;background-color:blanchedalmond">
                New Nutritional Item
            </th>
        </tr>

    </table>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        <font style="font-size:13px;font-weight:bolder">Nutrition Item</font>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nutrition_Item, new { htmlAttributes = new { @class = "form-control",@required="required", style = "font-size:13px;height:25px" } })
            @Html.ValidationMessageFor(model => model.Nutrition_Item, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">

        <font style="font-size:13px;font-weight:bolder">On Nutrition List</font>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.ShowOnNutrientPanel)
                @Html.ValidationMessageFor(model => model.ShowOnNutrientPanel, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">

        <font style="font-size:13px;font-weight:bolder">Order on Panel</font>
        <div class="col-md-10">
            @Html.EditorFor(model => model.OrderOnNutrientPanel, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px;width:100px" } })
            @Html.ValidationMessageFor(model => model.OrderOnNutrientPanel, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">

        <font style="font-size:13px;font-weight:bolder">DV</font>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DV, new { htmlAttributes = new { @class = "form-control", @Value = "0" , @required="required", style = "font-size:13px;height:25px" } })
            @Html.ValidationMessageFor(model => model.DV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <font style="font-size:13px;font-weight:bolder">Measurement</font>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Measurement, new { htmlAttributes = new { @class = "form-control", style = "font-size:13px;height:25px" } })
            @Html.ValidationMessageFor(model => model.Measurement, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn alert-warning" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


