@model Recitopia.Models.Nutrition

@{
    ViewBag.Title = "Delete";
}
@if (ViewBag.ErrorMessage != null)
{
    <font style="color:red">@ViewBag.ErrorMessage</font>
}
<div style="font-size: 25px; text-decoration:none">
    <font class="alert-danger">Are you sure you want to delete this Nutritional item?</font>
</div>

<div>

   
    <dl class="dl-horizontal" style="font-size:13px">
        <dt>
            Nutrition Item
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nutrition_Item)
        </dd>

        <dt>
            DV
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DV)
        </dd>

        <dt>
            Measurement
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Measurement)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn alert-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
