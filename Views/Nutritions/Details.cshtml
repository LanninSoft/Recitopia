@model Recitopia.Models.Nutrition

@{
    ViewBag.Title = "Details";
}

<div class="d-print-none">
    <table style="width:100%">
        <tr>
            <td>
                <div>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Nutrition_Item_Id }) |
                    @Html.ActionLink("Back to List", "Index") |
                    @if (Model.isArchived == false)
                    {
                        @Html.ActionLink("Archive It", "ArchiveIt", new { id = Model.Nutrition_Item_Id })
                    }
                    else
                    {
                        @Html.ActionLink("UnArchive It", "UnArchiveIt", new { id = Model.Nutrition_Item_Id })
                    }
                </div>
            </td>

        </tr>
    </table>
</div>
<br />
<table style="width:100%">
    <tr>
        <th>
            Details
        </th>
    </tr>
</table>
@if (Model.isArchived == true)
{
    var isArchivedMessage = "Archived on " + Model.ArchiveDate.ToShortDateString();

    <table style="width:100%" class="table table-borderless rounded-sm box effect8">
        <tr class="pageBanner">
            <th style="font-size:20px">
                @Model.Nutrition_Item <font style="font-size:15px;color:red">(@isArchivedMessage)</font>
            </th>
        </tr>

    </table>
}
else
{

    <table style="width:100%" class="table table-borderless rounded-sm box effect8">
        <tr class="pageBanner">
            <th style="font-size:20px">
                @Model.Nutrition_Item
            </th>
        </tr>

    </table>
}
<br />
<br />
<div>


    <dl class="dl-horizontal" style="font-size:13px">
        <dt>
            Nutrition Item
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nutrition_Item)
        </dd>

        <dt>
            DV
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DV)
        </dd>

        <dt>
            Measurement
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Measurement)
        </dd>

    </dl>
</div>
<br />
<div class="d-print-none">
    <table style="width:100%">
        <tr>
            <td>
                <div>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Nutrition_Item_Id }) |
                    @Html.ActionLink("Back to List", "Index") |
                    @if (Model.isArchived == false)
                    {
                        @Html.ActionLink("Archive It", "ArchiveIt", new { id = Model.Nutrition_Item_Id })
                    }
                    else
                    {
                        @Html.ActionLink("UnArchive It", "UnArchiveIt", new { id = Model.Nutrition_Item_Id })
                    }
                </div>
            </td>

        </tr>
    </table>
</div>


