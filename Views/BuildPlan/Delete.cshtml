@model Recitopia.Models.BuildPlan

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.ErrorMessage != null)
{
    <font style="color:red">@ViewBag.ErrorMessage</font>
}

<table style="width:100%" class="table table-borderless rounded-sm box effect8">
    <tr class="pageBannerAdmin">
        <th>
            Delete
        </th>
    </tr>
</table>
<br />

<font class="alert-danger">Are you sure you want to delete '@Model.Plan_Name'?</font>
<br />
All associated Order Item relationships will also be removed.
<br />
<div>
    
    <dl  class="dl-horizontal" style="font-size:13px">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plan_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plan_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NeedByDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NeedByDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullFilled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullFilled)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastModified)
        </dt>
       
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BuildPlan_Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
