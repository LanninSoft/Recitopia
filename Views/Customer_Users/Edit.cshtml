        </div>
        <div>
            <input disabled value="@ViewBag.AppUsers.User_Name" />
        </div>
        <br />
        <div>

            <font style="font-weight:bold">Associated Customer Name</font>
        </div>
        <div>
            <select asp-for="Customer_Id"
                    asp-items="ViewBag.Customers">
            </select>
            <span asp-validation-for="Customer_Id" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <font style="font-weight:bold">Notes</font>
            <textarea asp-for="Notes" class="form-control"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
