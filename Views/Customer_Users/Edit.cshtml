@model Recitopia.Models.Customer_Users

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <table width="100%" class="table-borderless">
        <tr>
            <th style="font-size:20px">
                Edit
            </th>
        </tr>
        <tr>
            <th style="font-size:30px;background-color:blanchedalmond">
                Customer User Details
            </th>
        </tr>
    </table>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CU_Id" />
            <div>
                <label asp-for="Id" class="control-label"></label><br />
                <select asp-for="Id"
                        asp-items="ViewBag.AppUsers">
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Customer_Id" class="control-label"></label><br />
                <select asp-for="Customer_Id"
                        asp-items="ViewBag.Customers">
                </select>
                <span asp-validation-for="Customer_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

