@model Recitopia.Models.Customer_Users

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table width="100%" class="table-borderless">
    <tr>
        <th style="font-size:20px">
            Customer User Details
        </th>
    </tr>
    <tr>
        <th style="font-size:30px;background-color:blanchedalmond">
            @Model.Customer_Name
        </th>
    </tr>
</table>

<div>
   
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer_Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CU_Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
