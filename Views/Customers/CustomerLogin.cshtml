@model IEnumerable<Recitopia.Models.Customer_Users>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table style="width:100%" class="table table-borderless rounded-sm box effect8">
    <tr class="pageBanner">
        <th style="font-size:20px">
            Customer Selection
        </th>
    </tr>

</table>
<br />
<table class="table table-hover">
    
    @if (ViewBag.UserCustomers != null)
    {
        @foreach (var item in ViewBag.UserCustomers)
        {
            <tr>
                <td>
                    <a asp-action="CustomerLoginGo" asp-route-id="@item[1]">@item[0]</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td style="text-align:left;padding:2px">
                <div><font style="font-size:20px">You are not associated to any Customer Groups.</font> </div>
                <div><font style="color:red">Customer Group association is required to access Recitopia.</font></div><br />
                <div><a href="@Url.Action("CreateCustomerGroup", "Customers")" class="btn alert-success btn-sm effect8" role="button"><i class="fa fa-plus"></i> Create your new customer group</a><br />Customer Groups allow you to share your Recipes with friends/co-workers by simply inviting them.</div><br />

            </td>
        </tr>
    }
    <tr>
        <td style="text-align:left;padding:2px">

            <br /><div><a href="@Url.Action("SearchCustomerGroup", "Customers")" class="btn alert-success btn-sm effect8" role="button"><i class="fa fa-search"></i> Search for Current Customer and request access</a><br />Search currently registered Customer Groups and request access.</div>
        </td>
    </tr>
</table>

