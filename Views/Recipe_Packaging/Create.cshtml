@model Recitopia.Models.Recipe_Packaging

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table style="width:100%" class="table table-borderless rounded-sm box effect8">
    <tr>
        <th style="font-size:20px;background-color:blanchedalmond">
            @ViewBag.RecipeName
        </th>
    </tr>

</table>
<br />
<table width="100%">
    <tr>
        <td  style="vertical-align:top;text-align:left">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            
                <div class="form-horizontal">

                    <div class="form-group">

                        <input value="@ViewBag.Rec_Id" id="RID" name="RID" type="hidden">
                    </div>

                    <div class="form-group">

                        <font style="font-size:13px;font-weight:bolder">Packaging Name</font>
                        <div class="col-md-10">
                            @Html.DropDownList("Package_Id", null, htmlAttributes: new { @class = "form-control", required = "required", style = "font-size:13px;height:35px" })
                            @Html.ValidationMessageFor(model => model.Package_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">

                        <font style="font-size:13px;font-weight:bolder"> Amount</font>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @Value = "0", style = "font-size:13px;height:25px" })
                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add" class="btn alert-success effect8" />
                        </div>
                    </div>
                </div>
            }
        </td>
       
        <td style="vertical-align:top;text-align:left">
            <div class="effect8" style="width:300px">
                <table style="width:100%" class="table-striped">
                    <tr style="background-color:lightblue">
                        <th align="center">
                            Packaging already in '@ViewBag.RecipeName'
                        </th>

                    </tr>
                    @if (ViewBag.Packaging != null)
                    {
                        foreach (var thing in ViewBag.Packaging)
                        {
                            <tr>
                                <td style="font-size:small">
                                    -@thing
                                </td>


                            </tr>
                        }
                    }

                </table>
            </div>
        </td>
    </tr>
</table>



<div>
    @Html.ActionLink("Back to List", "Index", new { recipeID = ViewBag.Rec_Id })
</div>

